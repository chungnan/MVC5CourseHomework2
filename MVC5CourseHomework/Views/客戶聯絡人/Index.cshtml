@model IEnumerable<MVC5CourseHomework.Models.客戶聯絡人>

@{
    ViewBag.Title = "客戶聯絡人列表";
}

<h2>客戶聯絡人列表</h2>

@using (Html.BeginForm("Search", "客戶聯絡人", FormMethod.Get))
{
<div class="form-inline">
    @Html.TextBox("contantName", null, new { @class = "form-control", placeholder = "請輸入姓名" })
    @Html.TextBox("contantPhone", null, new { @class = "form-control", placeholder = "請輸入手機" })
    @Html.TextBox("contantTel", null, new { @class = "form-control", placeholder = "請輸入電話" })
    @Html.DropDownList("contantTitle", null, "-- 請選擇職稱 --", htmlAttributes: new { @class = "form-control" })
    <button type="submit" class="btn btn-primary" name="submit" value="Search">Search</button>
    <button type="submit" class="btn btn-default" name="submit" value="Export">Export</button>
</div>
}
<br />
<p class="text-right">
    @Html.ActionLink("批次更新", "BatchUpdate", null, new { @class = "btn btn-warning" })
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("職稱", "Index", new { sortColumn = ViewBag.職稱})
        </th>
        <th>
            @Html.ActionLink("姓名", "Index", new { sortColumn = ViewBag.姓名 })
        </th>
        <th>
            @Html.ActionLink("Email", "Index", new { sortColumn = ViewBag.Email })
        </th>
        <th>
            @Html.ActionLink("手機", "Index", new { sortColumn = ViewBag.手機 })
        </th>
        <th>
            @Html.ActionLink("電話", "Index", new { sortColumn = ViewBag.電話 })
        </th>
        <th>
            @Html.ActionLink("客戶名稱", "Index", new { sortColumn = ViewBag.客戶名稱 })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.職稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.姓名)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.手機)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.電話)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.客戶資料.客戶名稱)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-warning" })
            </td>
        </tr>
    }

</table>
